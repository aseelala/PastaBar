@model IEnumerable<Pasta>
@{ ViewBag.Titel = "overzichts";}
<h2>Overzischt bestellingen </h2>

<form method="post" action="naarpastashop">
<table class="table table-striped">
    <thead>
        <tr>
            <th>Pastasoort</th>
            <th>Grotte</th>
            <th>Saus</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var pasta in Model)
        {

            <tr>
                <td>@pasta.Soort</td>
                <td>@pasta.Grotte</td>
                <td>@pasta.Saus</td>

            </tr>
        }
    </tbody>
</table>
<p>
    <input type="submit"  class="groene-button" value="Bestelling(en) doorsturen" />
</p>
<br />
</form>
